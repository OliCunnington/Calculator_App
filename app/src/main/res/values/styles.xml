<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_btn" parent="android:Widget">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/touchable_button</item>
        <item name="android:onClick">onClickDefault</item>
    </style>

    <style name="special_btn">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/touchable_button_special</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">onClickSpecial</item>
    </style>

    <style name="default_btn_dark" parent="android:Widget">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/touchable_button_dark</item>
        <item name="android:onClick">onClickDark</item>
    </style>

</resources>
